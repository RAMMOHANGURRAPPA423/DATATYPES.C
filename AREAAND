#include <stdio.h>

int main()
{
   float radius,area;
   
   printf("enter the radius of circle:");
   scanf("%d\n",&radius);
   
   area=3.14*radius*radius;
   
   printf("area of circle %f\n",area);
   
   float circum_circle;
   circum_circle=2*3.14*radius;
   printf("circumference of circle:%f",circum_circle);
}
